        crossorigin="anonymous"></script>
    <script>
        // JavaScript to trigger text animation
        document.addEventListener("DOMContentLoaded", function () {
            var textWriterElements = document.getElementsByClassName("text-writer");
            for (var i = 0; i < textWriterElements.length; i++) {
                var textWriterElement = textWriterElements[i];
                var text = textWriterElement.innerHTML;
                textWriterElement.innerHTML = "";
                var delay = 0;
                for (var j = 0; j < text.length; j++) {
                    var charElement = document.createElement("span");
                    charElement.innerHTML = text[j];
                    charElement.style.animationDelay = delay + "s";
                    textWriterElement.appendChild(charElement);
                    delay += 0.1; // Delay between each character animation
                }
            }
        });
    </script>
